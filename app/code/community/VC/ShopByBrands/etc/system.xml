<?xml version="1.0"?>
<config>
	<sections>
        <vc_shopbybrands translate="label" module="vc_shopbybrands">
            <label>Shop By Brands Settings</label>
			<tab>vc_all</tab>
            <frontend_type>text</frontend_type>
            <sort_order>400</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
        	<groups>
        		<general translate="label">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
                    <fields>
						<enable translate="label">
							<label>Enable</label>
                            <frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[]]></comment>
						</enable>
						
						<router translate="label">
							<label>Route for Brand</label>
                            <frontend_type>text</frontend_type>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[NOT contain any slashe. ex: brand, manufacturer.]]></comment>
						</router>
						
						<brand_title translate="label">
							<label>Brand Title</label>
                            <frontend_type>text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[Use it on breadcrumb]]></comment>
						</brand_title>	
						
						
						<brand translate="label">
							<label>Attribute for Brand</label>
                            <frontend_type>text</frontend_type>
							<sort_order>15</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[Attribute code we use for filtering.]]></comment>
						</brand>
						

						<image_folder translate="label">
							<label>Image Folder</label>
                            <frontend_type>text</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[Folder where to save image to.]]></comment>
						</image_folder>
						
						<image_extension_allow translate="label">
							<label>Image extension allowed</label>
                            <frontend_type>text</frontend_type>
							<sort_order>25</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[Allowed extension for uploaded image.]]></comment>
						</image_extension_allow>

						<image_width translate="label">
							<label>Image width</label>
                            <frontend_type>text</frontend_type>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[The maximum width for image.]]></comment>
						</image_width>						

						<image_height translate="label">
							<label>Image height</label>
                            <frontend_type>text</frontend_type>
							<sort_order>35</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[The maximum height for image.]]></comment>
						</image_height>	
                   	</fields>
	            </general>
				
				<layer_navigation translate="label">
                    <label>Layer navigation Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>4</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
                    <fields>
						<brand_layout translate="label">
							<label>Brand's layout</label>
                            <frontend_type>select</frontend_type>
							<source_model>vc_shopbybrands/system_config_source_layout_brand</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[]]></comment>
						</brand_layout>
					</fields>
				</layer_navigation>					
				<menu_link translate="label">
                    <label>Menu link Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>5</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
                    <fields>
						<enable_top translate="label">
							<label>Enable top link</label>
                            <frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[]]></comment>
						</enable_top>
					
						<enable_footer translate="label">
							<label>Enable footer link</label>
                            <frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[]]></comment>
						</enable_footer>
						
						<title translate="label">
							<label>Link Title</label>
                            <frontend_type>text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[]]></comment>
						</title>						
						
					</fields>
				</menu_link>						
			</groups>
		</vc_shopbybrands>
	</sections>			
</config>